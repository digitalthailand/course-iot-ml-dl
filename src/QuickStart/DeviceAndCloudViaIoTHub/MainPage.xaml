<Page
    x:Class="DeviceAndCloudViaIoTHub.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DeviceAndCloudViaIoTHub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <StackPanel>
            <TextBlock Text="Hello" />
            <TextBox x:Name="TemperatureTextBox" Margin="5" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Hello" />
            <TextBox x:Name="HumidityTextBox" Margin="5" />
        </StackPanel>
        <StackPanel>
            <TextBlock x:Name="TimeTextBlock" Text="Show Time" />
            <Button x:Name="ActionButton" Content="OK" />
        </StackPanel>
    </StackPanel>
</Page>
